      ]
    },
    "classes": {
      "patterns": [
        {
          "match": "\\b(id|name|stars|begin|loop|bestTime|averageTime|isQuest|name|distance|count|hp|maxhp|armor|maxarmor|buffs|buffs.c|buffs.s|debuffs|debuffs.c|debuffs.s|state|time|level|left|right|potion|distance|count|string|enabled|paused|idle|walking|(?<=armor\\.)(f)|(?<=(pos|input)\\.)(x|y|z)|(?<=screen\\.)(i|x|w|h)|stone|wood|tar|ki|bronze|crystals|direction|name|ms|year|month|day|hour|minute|second)\\b|\\b(loc|foe|item|harvest|pickup|time|totaltime|armor|hp|maxhp|maxarmor|buffs|debuffs|pos|ai|key|input|res|face|player|totalgp|rng|rngf|screen|utc|draw|int(?!,|\\)|\\])|item|math|music|ambient|ui|root|canvas|te|language|storage|string)\\b",
          "name": "support.class.stonescript"
        },
        {
          "match": "(?<!\\.)\\bcolor\\b",
          "name": "support.class.stonescript"
        },
        {
          "match": "\\b(name|state|time|distance|count|(?<=screen\\.[xyz])\\w)\\b",
          "name": "support.property-value.stonescript"
        }
      ]
    },
    "functions": {
      "patterns": [
        {
          "name": "support.function.stonescript",
          "match": "([A-Za-z_][A-Za-z0-9_]*(?=\\())"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "match": "(?<=^ *)\\b(var|import|func|new|play)\\b",
          "name": "keyword.stonescript"
        },
        {
          "match": "\\b(disable|enable)\\s(hud|player|loadout input|loadout print|pause|banner|abilities|hud)\\b",
          "name": "keyword.stonescript"
        },
        {
          "match": "\\b(equip|equipL|equipR|activate|loadout|brew|for|return)\\b",
          "name": "keyword.control.stonescript"
        }
      ]
    },
    "constants": {
      "patterns": [
        {
          "match": "\\b(true|false|none)\\b",
          "name": "constant.language.stonescript"
        },
        {
          "match": "(\\b|(?<=^ *>(`|o|h|c|f|\\()))(-)?[0-9.]+\\b",
          "name": "constant.numeric.stonescript"
        }
      ]
    },
    "colors": {
      "patterns": [
        {
          "match": "(#[0-9a-fA-F]{6})",
          "name": "constant.other.color.stonescript"
        },
        {
          "match": "(#[0-9a-fA-F]{3})",
          "name": "constant.other.color.stonescript"
        },
        {
          "match": "(#red|#white|#cyan|#yellow|#green|#blue)",
          "name": "constant.other.color.stonescript"
        },
        {
          "match": "(#rain[0-9a-fA-F]{2})",
          "name": "constant.other.color.stonescript"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "begin": "\"",
          "end": "\"",
          "name": "string.quoted.double.stonescript"
        },
        {
          "begin": "'",
          "end": "'",
          "name": "string.quoted.single.stonescript"
        },
        {
          "begin": "(?<=^ *>[`ohcf] ?(@.*?@|(-|\\+)?\\d+),(@.*?@|(-|\\+)?\\d+),#\\w{3,6},(\\n *\\^)?)|(?<=^ *>[`ohcf] ?(@.*?@|(-|\\+)?\\d+),(@.*?@|(-|\\+)?\\d+),(\\n *\\^)?)(?!#\\w{3,6},)|(?<=^ *>)(?![`ohcf] ?(@.*?@|(-|\\+)?\\d+),(@.*?@|(-|\\+)?\\d+),)|(?<=^ *>\\()",
          "end": "(?<=^)(?! *\\^)",
          "name": "meta.stonescript",
          "patterns": [
            { "match": "^ *\\^", "name": "keyword.control.stonescript"},
            { "include": "#ascii" },
            { "include": "#links" },
            { "match": "(@.+?@)|(ascii.+?asciiend)|(.+?)", 
              "captures": {
                "3": {"name": "string.interpolated.stonescript"}
              }
            }
          ]
        },
        {
          "match": "^ *>(^ *>|\\(|[`ohcf](?= ?(@.*?@|(-|\\+)?\\d+),(@.*?@|(-|\\+)?\\d+),))?",
          "name": "keyword.control.stonescript"
        },
        {
          "match": "\\\\n",
          "name": "constant.character.escape"
        }
      ]
    }
  }
}