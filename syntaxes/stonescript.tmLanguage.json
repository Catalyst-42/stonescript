{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Stonescript",
  "scopeName": "source.txt",
  "patterns": [
    { "include": "#comments" },
    { "include": "#strings" },
    { "include": "#sounds"},
    { "include": "#variables" },
    { "include": "#functions" },
    { "include": "#keywords" },
    { "include": "#operators" },
    { "include": "#control" },
    { "include": "#classes" },
    { "include": "#links" },
    { "include": "#colors" },
    { "include": "#constants" },
    { "include": "#ascii" }
